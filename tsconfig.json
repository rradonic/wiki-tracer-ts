{
  "compilerOptions": {
    "target": "es2021",
    "module": "nodenext",
    "rootDir": "src",
    "outDir": "dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "ts-node": {
    "compilerOptions": {
      "isolatedModules": false
    }
  }
}
